{
  "compileOnSave": true,
  "compilerOptions": {
    //**** WEB
    "target": "es5",
    "module": "system",
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "react-md/*": [ "app-web/react-md/lib/*" ],
      "web-fela": [ "app-web/fela/index" ],
      "web-react-native": [ "app-web/react-native/index" ],
      "polyfill/index": [ "polyfill/web" ]
    },

    //**** REACT NATIVE
    //"target": "es6",

    //**** COMMON

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true
  },
  "exclude": [
    //*** web
    //"index.tsx",
    //"app-web/",
    //"polyfill/web.tsx",

    //*** native
    "app-native",
    "App.tsx",
    "polyfill/index.tsx",

    "jspm_packages/",
    "node_modules/",
    "node_modules/@types/node/"

  ]
}