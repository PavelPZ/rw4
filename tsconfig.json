{
  "compileOnSave": true,
  "compilerOptions": {
    //**** WEB
    //"target": "es5",
    //"module": "system",
    //"inlineSourceMap": true,
    //"inlineSources": true,
    //"importHelpers": true,

    //**** REACT NATIVE
    "target": "es6",
    "allowSyntheticDefaultImports": true,

    //**** COMMON
    "baseUrl": ".",
    "paths": {
      //  "react-md": [ "react-md/" ]
      "app-common": [ "app-common/index" ]
    },

    "strictNullChecks": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true
  },
  "exclude": [
    //*** web
    "index.tsx",
    "app-web/",

    //*** native
    //"app-native",
    //"App.tsx",

    "jspm_packages/",
    "node_modules/"


  ]
}