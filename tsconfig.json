{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",

    "baseUrl": ".",
    "paths": {
      "rw-router/*": [ "libs/rw-router/*" ],
      "rw-login/*": [ "libs/rw-login/*" ],
      "rw-utils/*": [ "libs/rw-utils/*" ],
      "rw-controls/*": [ "libs/rw-controls/*" ],
      "rw-fela-w/*": [ "libs/rw-fela-w/*" ],
      "rw-mui/*": [ "libs/rw-mui/*" ],
      "rw-mui-n/*": [ "libs/rw-mui/*" ],
      "rw-mui-w/*": [ "libs/rw-mui-w/*" ],
      "rw-mui-u/*": [ "libs/rw-mui-u/*" ],
      "recompose/*": [ "typings/recompose-low" ]
    },

    //"importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    //"strict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    //"jsx": "react-native", //TypeError: In this environment the sources for assign MUST be an object. This error is a performance
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "esnext.asynciterable"
    ]
  },
  "include": [ "**/*" ],
  "exclude": [
    "typings/mdi-react-w.d.ts",
    "design",
    "jspm_packages",
    "node_modules",
    "libs/rw-mui/svg-icons/all",
    "libs/rw-mui-w/svg-icons/all"
  ]
}
